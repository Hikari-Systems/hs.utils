{
  "name": "@hikari-systems/hs.utils",
  "version": "0.0.21",
  "description": "General tools for use in Hikari Systems apps",
  "main": "es5/index.js",
  "author": "Rick Knowles <rick.knowles@hikari-systems.com>",
  "license": "SEE LICENSE IN LICENSE.md",
  "scripts": {
    "prepare": "npm run lint && npm run checkTypes && npm run build",
    "test": "jest",
    "lint": "eslint ./lib",
    "checkTypes": "tsc --noEmit",
    "build": "rm -rf ./es5 && tsc --declaration && npm run copy-dts",
    "test-ci": "npm run prepare && npm test",
    "format": "npx prettier --write --ignore-unknown \"**/*.*[t|j]s\"",
    "copy-dts": "cp ./lib/*.d.ts es5 && touch es5/types.js"
  },
  "dependencies": {
    "@types/express-serve-static-core": "^4.19.5",
    "dayjs": "^1.11.11",
    "express": "^4.19.2",
    "express-session": "^1.18.0",
    "nconf": "^0.12.1",
    "redis": "^4.6.14",
    "uuid": "^10.0.0",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/nconf": "^0.10.6",
    "@types/node": "^20.14.9",
    "@types/redis": "^4.0.11",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "sinon": "^4.1.3",
    "ts-jest": "^29.1.5",
    "typescript": "^5.5.2"
  },
  "directories": {
    "lib": "lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Hikari-Systems/hs-utils.git"
  },
  "keywords": [
    "hikari",
    "utilities"
  ],
  "types": "./es5/index.d.ts",
  "bugs": {
    "url": "https://github.com/Hikari-Systems/hs-utils/issues"
  },
  "homepage": "https://github.com/Hikari-Systems/hs-utils#readme"
}
