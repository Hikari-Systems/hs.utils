    "@langchain/openai": "^0.4.4",
    "@types/express-serve-static-core": "^4.19.5",
    "connect-pg-simple": "^10.0.0",
    "connect-redis": "^7.1.1",
    "dayjs": "^1.11.11",
    "express": "^4.21.0",
    "express-session": "^1.18.0",
    "nconf": "^0.12.1",
    "pg": "^8.13.1",
    "redis": "^4.6.14",
    "together-ai": "^0.13.0",
    "uuid": "^10.0.0",
    "winston": "^3.13.0",
    "zod": "^3.24.2"
